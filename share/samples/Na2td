# Sample data file.
# This is a simple data file. It would start a td calculation
# of the sodium dimer. Not that you previously need to run the
# Na2 example, that calculates the ground state.
# Consult the manual for a brief explanation of the variables.
 
SystemName = "Na2"
CalculationMode = td
Units = "eVA"
FromScratch = yes

%Coordinates
"Na" | 0.0 | 0.0 |  1.7	| yes
"Na" | 0.0 | 0.0 | -1.7 | yes
%

BoxShape = sphere
Radius  = 8.0
Spacing = 0.3

XFunctional = lda_x
CFunctional = lda_c_pz

MaximumIter = 200
ConvAbsDens = 1e-6

T = 10
dt = 0.001
TDMaximumIter = T/dt
TDEvolutionMethod = aetrs
TDExponentialMethod = standard
TDExpOrder = 4
TDTimeStep = dt

TDDeltaStrength = 0.01
%TDPolarization
0 | 0 | 1
%

AbsorbingBoundaries = no
ABWidth = 3.0
ABHeight = -4.0

MoveIons = no
