# $Id$

Test     : Spinors
Author   : Micael Oliveira
Date     : 16.05.05
Arch     : Linux pseudopod.fisica 2.6.10-1.770_FC3 #1 Thu Feb 24 14:00:06 EST 2005 i686 i686 i386 GNU/Linux
Release  : 1.99devel
Programs : octopus_cmplx
Enabled  : Yes

INP
CalculationMode = gs
fromScratch = yes
Radius = 7.0
Spacing = 0.5
%Coordinates
  "Na" | 0 | 0 | 0.0
%
SpinComponents = non_collinear
GuessMagnetDensity = user_defined
%AtomsMagnetDirection
 1 | 1 | 0
%
Eigensolver = lanczos
EOF

RUN

Match ; TotalEnergy ; grep -A 6 '^Energy:' static/info ; \s*Total\s*=\s*-0.187516\d*
Match ; Eigenvalues ; grep -A 2 'Eigenvalues \[' static/info | tail -1 ; \s*-0.08533\d*\s*0.92/ 0.08
Match ; Local Magnetic Moments ; grep -A 2 'Local Magnetic Moments' static/info | tail -1 ; \s*0.3855\d*\s*0.3855\d*\s*0.8382\d* 
