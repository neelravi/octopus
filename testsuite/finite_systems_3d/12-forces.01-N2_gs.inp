# -*- coding: utf-8 mode: shell-script -*-
# $Id$

CalculationMode = gs
FromScratch = yes

bond_length = 2.7
%Coordinates
"N" |  -bond_length/2 |  0.0 |  0.0 | no
"N" |   bond_length/2 |  0.0 |  0.0 | no
%

BoxShape = sphere

radius = 10.5
spacing = 0.40

MaximumIter = 200
ConvRelDens = 1e-4

LCAOStart = lcao_full

EigenSolver = cg_new
EigenSolverInitTolerance = 1e-2
EigenSolverFinalTolerance = 1e-4
EigenSolverFinalToleranceIteration = 6
EigenSolverMaxIter = 20

PoissonSolver = fft_corrected

ParallelizationStrategy=par_domains
