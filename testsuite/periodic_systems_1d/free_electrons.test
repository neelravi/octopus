# $Id$

Test     : Free Electron Bands in 1D
Author   : Carlo + Heiko
Date     : 16.06.05
Arch     : Linux n11 2.6.11.6-smp-1 #1 SMP Mon Apr 11 20:30:44 CEST 2005 i686 GNU/Linux
Release  : head
Programs : octopus_cmplx
Enabled  : Yes

INP
CalculationMode = unocc
fromScratch = yes

Dimensions = 1
PeriodicDimensions = 1

NumberUnoccStates = 4
ConvAbsDens = 1e-6

OnlyUserDef = yes
NonInteractingElectrons = yes

%Species
"Zero" | 22.1 | spec_usdef | 2 | "0"
%

%Coordinates
 "Zero" | 0 | 0 | 0 | yes
%


BoxShape = parallelepiped

%Lsize
 10.0 | 10.0 | 10.0
%

%Spacing
 0.5 | 0.5 | 0.5
%

%BoxOffset
 0.0 | 0.0 | 0.0
%

%NumberKPoints
 10 | 1 | 1 | 0
%

CenterOfInversion = yes
EOF

RUN

