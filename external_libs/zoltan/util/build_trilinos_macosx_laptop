#Script for building Trilinos on Karen's Mac joda.
#This is a 32-bit installation.  
setenv CC mpicc
setenv CXX mpic++
setenv F77 mpif77
../configure -C \
  --prefix=/Users/kddevin/code/Trilinos/Obj_mac32 \
  --disable-fortran \
  --enable-mpi --with-mpi-compilers \
  --disable-default-packages \
  --enable-epetra \
  --enable-teuchos \
  --enable-isorropia \
  --with-gnumake \
  --with-zoltan \
  --with-incdirs="-I/Users/kddevin/code/zoltan/src/include -I/Users/kddevin/code/ParMETIS3_1 -I/Users/kddevin/code/ParMETIS3_1/METISLib" \
  --with-libs="-framework vecLib -L/Users/kddevin/code/zoltan/src/Obj_mac -lzoltan -L/Users/kddevin/code/ParMETIS3_1 -lparmetis -lmetis -L/Users/kddevin/code/PaToH -lpatoh " \
  --with-cxxflags="-DLAM_BUILDING" |& tee KDD.C
make everything |& tee KDD.M
make install |& tee KDD.I
