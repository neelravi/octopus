#An alternate script for building trilinos on odin; courtesy of Jon Berry
#via Jim Willenbring.  Relies on a library in Jim Willenbring's subdirectory.

../configure \
CXXFLAGS=-O3 \
CFLAGS=-O3 \
FFLAGS=-O3 \
--prefix=/home/kddevin/code/Trilinos/Obj_berry \
--with-ldflags=-L/opt/lib \
--with-lapack=/home/jmwille/lib/liblapack.a \
--enable-mpi \
--with-mpi-compilers \
--cache-file=config.cache \
--disable-default-packages \
--enable-aztecoo \
--enable-examples \
--enable-epetra \
--enable-epetraext \
--enable-galeri \
--enable-ifpack \
--enable-ml \
--enable-teuchos \
--with-gnumake |& tee KDD.C
make everything |& tee KDD.M
make install |& tee KDD.I

