Test       : Sodium static polarizability
Programs   : octopus
TestGroups : long-run
Enabled    : Yes


Input: 05-polarizability.01-gs.inp
match ; Total energy   ; GREP(static/info, 'Total       =', 20) ; -11.40377627
match ; Eigenvalue     ; GREP(static/info, '1   --', 12) ;  -3.178226
match ; Occupation     ; GREP(static/info, '1   --', 28) ;   2.032697
match ; Eigenvalue     ; GREP(static/info, '2   --', 12) ;  -1.836886
match ; Occupation     ; GREP(static/info, '2   --', 28) ;  -0.032680

Input: 05-polarizability.02-sternheimer.inp
Precision: 0.001
match ; Polarizability xx ; LINE(em_resp/freq_0.0000/alpha, 2,  1) ; 3.379453
match ; Polarizability yy ; LINE(em_resp/freq_0.0000/alpha, 3, 28) ; 1.875131
match ; Polarizability zz ; LINE(em_resp/freq_0.0000/alpha, 4, 45) ; 1.875131

Input: 05-polarizability.03-finite-diff.inp
match ; Polarizability xx ; LINE(em_resp_fd/alpha, 2,  1) ; 3.379488
match ; Polarizability yy ; LINE(em_resp_fd/alpha, 3, 28) ; 1.875175
match ; Polarizability zz ; LINE(em_resp_fd/alpha, 4, 45) ; 1.875176

match ; Born charge xx ; LINE(em_resp_fd/Born_charges, 5,  5) ; 0.002287
match ; Born charge yy ; LINE(em_resp_fd/Born_charges, 6, 25) ; 0.004818
match ; Born charge zz ; LINE(em_resp_fd/Born_charges, 7, 45) ; 0.004802
# the Born charges should all be zero by symmetry, if the calculation were converged
