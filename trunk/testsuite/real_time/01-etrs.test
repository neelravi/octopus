Test       : Enforced time reversal symmetry propagator
Author     : Xavier
Release    : 3.1.0pre1
Programs   : octopus_mpi; octopus
TestGroups : short-run
Enabled    : Yes

#This test checks the time propagation

# ground state
Processors : 1
Input      : 01-etrs.01-gs.inp
Match ; Initial Energy   ; sed -n '/^Energy/{n\;p\;}' static/info ; \s*Total\s*=\s*-11.003

Processors : 4
Input      : 01-etrs.02-td.inp
Match ; Energy [step 1]  ; tail -21 td.general/energy | head -1 ; \s*-1.0981
Match ; Energy [step 5]  ; tail -16 td.general/energy | head -1 ; \s*-1.0981
Match ; Energy [step 10] ; tail -11 td.general/energy | head -1 ; \s*-1.0981
Match ; Energy [step 15] ; tail -6 td.general/energy  | head -1 ; \s*-1.0981
Match ; Energy [step 20] ; tail -1 td.general/energy  | head -1 ; \s*-1.0981

Match ; Forces [step 1]  ; tail -21 td.general/coordinates | head -1 | cut -b 270-288; \s*1.700
Match ; Forces [step 5]  ; tail -16 td.general/coordinates | head -1 | cut -b 270-288; \s*1.675
Match ; Forces [step 10] ; tail -11 td.general/coordinates | head -1 | cut -b 270-288; \s*1.672
Match ; Forces [step 15] ; tail -6  td.general/coordinates | head -1 | cut -b 270-288; \s*1.673
Match ; Forces [step 20] ; tail -1  td.general/coordinates | head -1 | cut -b 270-288; \s*1.675

Processors : 4
Input      : 01-etrs.03-td_lanczos.inp
Match ; Energy [step 1]  ; tail -21 td.general/energy | head -1 ; \s*-1.0981
Match ; Energy [step 5]  ; tail -16 td.general/energy | head -1 ; \s*-1.0981
Match ; Energy [step 10] ; tail -11 td.general/energy | head -1 ; \s*-1.0981
Match ; Energy [step 15] ; tail -6 td.general/energy  | head -1 ; \s*-1.0981
Match ; Energy [step 20] ; tail -1 td.general/energy  | head -1 ; \s*-1.0981

Match ; Forces [step 1]  ; tail -21 td.general/coordinates | head -1 | cut -b 270-288; \s*1.700
Match ; Forces [step 5]  ; tail -16 td.general/coordinates | head -1 | cut -b 270-288; \s*1.675
Match ; Forces [step 10] ; tail -11 td.general/coordinates | head -1 | cut -b 270-288; \s*1.672
Match ; Forces [step 15] ; tail -6  td.general/coordinates | head -1 | cut -b 270-288; \s*1.673
Match ; Forces [step 20] ; tail -1  td.general/coordinates | head -1 | cut -b 270-288; \s*1.675
