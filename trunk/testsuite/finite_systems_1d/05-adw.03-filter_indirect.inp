# -*- coding: utf-8 mode: shell-script -*-
# $Id$

CalculationMode = opt_control

Dimensions = 1
fromScratch = yes

BoxShape = sphere
Spacing = 0.12
Radius =  8.0

NonInteractingElectrons = yes

%Species
"AWD1D" | 1 | user_defined | 1 | "1/64*(x)^4-1/4*(x)^2+1/256*(x)^3"
%

NonInteractingElectrons = yes

%Coordinates
"AWD1D" | 0 | 0 | 0
%

# ------------------
# TD RUN Parameters
# ------------------

stime  = 400.0
dt = 0.004
TDEvolutionMethod = exp_mid
TDExponentialMethod = lanczos
TDExponentialOrder = 20
TDLanczosTol = 1.0e-5
TDMaximumIter = stime/dt
TDTimeStep = dt

# --------------
# OCT parameters
# --------------

OCTPenalty = 0.05
OCTEps   = -1.0
OCTMaxIter = 2
OCTTargetMode = oct_targetmode_static
OCTFilterMode = no
OCTInitialState = oct_is_groundstate
OCTTargetOperator = oct_tg_gstransformation
%OCTTargetTransformStates
0 | 1
%

gamma = 500
w0 = 0.1568
%OCTFilter
frequency_filter | "exp(-gamma*(w-w0)^2) + exp(-gamma*(w+w0)^2)"
%

OCTScheme  = oct_algorithm_wg05
OCTDoubleCheck = no

#----------------------------
# Laser field = Initial guess
#-----------------------------

ampl = -0.2
freq1 = 0.0
%TDExternalFields
electric_field | 1 | 0 | 0 | envelope_constant | ampl | freq1 
%

