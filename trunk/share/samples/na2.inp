# Sample data file.
# This is a simple data file. It would generate the ground-state calculation
# of the sodium dimer.
# Consult the manual for a brief explanation of the variables.
 
CalculationMode = gs
Units = ev_angstrom
FromScratch = yes

%Coordinates
"Na" | 0.0 | 0.0 |  1.7	| yes
"Na" | 0.0 | 0.0 | -1.7 | yes
%

BoxShape = sphere
Radius  = 8.0
Spacing = 0.3

XCFunctional = lda_x + lda_c_pz

MaximumIter = 200
ConvAbsDens = 1e-6

EigenSolver = cg
EigenSolverInitTolerance = 1e-2
EigenSolverFinalTolerance = 1e-6
EigenSolverFinalToleranceIteration = 6
EigenSolverMaxIter = 25

TypeOfMixing = broyden
